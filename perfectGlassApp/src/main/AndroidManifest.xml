<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.repco.perfect.glassapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/remember"
        android:label="@string/app_name" >
        <uses-library
            android:name="com.google.android.glass"
            android:required="true" />

        <activity
            android:name="com.repco.perfect.glassapp.LaunchMenuActivity"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.repco.perfect.glassapp.ClipCaptureActivity"
            android:enabled="true"
            android:immersive="true"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.repco.perfect.glassapp.ClipPreviewActivity"
            android:enabled="true"
            android:immersive="true"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="com.repco.perfect.glassapp.ClipService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/perfect_show" />
            <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
        </service>
        <service
            android:name="com.repco.perfect.glassapp.sync.SyncService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter" />
        </service>
        <service android:name="com.repco.perfect.glassapp.sync.AuthenticatorService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name="com.repco.perfect.glassapp.storage.StorageService"
            android:enabled="true" />

        <provider
            android:name="com.repco.perfect.glassapp.sync.PerfectContentProvider"
            android:authorities="@string/provider_type"
            android:exported="true"
            android:syncable="true" />
    </application>

</manifest>
